<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.objectFactory" value="spring"/>
    <package name="dev.qwett.webappspring" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="hello" class="dev.qwett.webappspring.actions.HelloWorldAction" method="execute">
            <result name="success">/HelloWorld.jsp</result>
        </action>

        <action name="edit" class="dev.qwett.webappspring.actions.EditAction" method="input">
            <result name="input">/edit.jsp</result>
        </action>

        <action name="save" class="dev.qwett.webappspring.actions.EditAction" method="execute">
            <result name="success">/thankyou.jsp</result>
        </action>

        <!--   STORES        -->
        <action name="stores" class="dev.qwett.webappspring.actions.StoreAction" method="execute">
            <result name="success">/stores/stores.jsp</result>
        </action>

        <action name="addStoreForm">
            <result>/stores/addStore.jsp</result>
        </action>

        <action name="addStore" class="dev.qwett.webappspring.actions.StoreAction" method="add">
            <result name="success" type="redirect">/stores</result>
        </action>

        <!--   CONSUMERS        -->
        <action name="consumers" class="dev.qwett.webappspring.actions.ConsumerAction" method="execute">
            <result name="success">/consumers/consumers.jsp</result>
        </action>

        <action name="addConsumerForm">
            <result>/consumers/addConsumer.jsp</result>
        </action>

        <action name="addConsumer" class="dev.qwett.webappspring.actions.ConsumerAction" method="add">
            <result name="success" type="redirect">/consumers</result>
        </action>
    </package>

</struts>
