<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.objectFactory" value="spring"/>

    <package name="dev.qwett.webappspring" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>



    <!--   CONSUMERS        -->
    <package name="consumers" namespace="/consumers" extends="struts-default">

        <default-action-ref name="consumers"/>

        <action name="consumers" class="dev.qwett.webappspring.actions.ConsumerAction" method="execute">
            <result name="success">/consumers/consumers.jsp</result>
        </action>

        <action name="addForm">
            <result>/consumers/addConsumer.jsp</result>
        </action>

        <action name="editForm" class="dev.qwett.webappspring.actions.ConsumerAction" method="getById">
            <param name="idConsumer">{1}</param>
            <result name="success" >/consumers/editConsumer.jsp</result>
        </action>

        <action name="edit" class="dev.qwett.webappspring.actions.ConsumerAction" method="edit">
            <result name="input">/consumers/editConsumer.jsp</result>
            <result name="success" type="redirect">/consumers/</result>
        </action>

        <action name="delete" class="dev.qwett.webappspring.actions.ConsumerAction" method="delete">
            <param name="idConsumer">{1}</param>
            <result name="success" type="redirect">/consumers/</result>
        </action>

        <action name="add" class="dev.qwett.webappspring.actions.ConsumerAction" method="add">
            <result name="input">/consumers/addConsumer.jsp</result>
            <result name="success" type="redirect">/consumers/</result>
        </action>

        <action name="getByName" class="dev.qwett.webappspring.actions.ConsumerAction" method="getByName">
            <result name="success">/consumers/consumers.jsp</result>
            <result name="error">/consumers/consumers.jsp</result>
        </action>

    </package>

    <!--   STORES        -->
    <package name="stores" namespace="/stores" extends="struts-default">

        <default-action-ref name="stores"/>

        <action name="stores" class="dev.qwett.webappspring.actions.StoreAction" method="execute">
            <result name="success">/stores/stores.jsp</result>
        </action>

        <action name="addForm">
            <result>/stores/addStore.jsp</result>
        </action>

        <action name="editForm" class="dev.qwett.webappspring.actions.StoreAction" method="getById">
            <param name="idStore">{1}</param>
            <result name="success">/stores/editStore.jsp</result>
        </action>

        <action name="edit" class="dev.qwett.webappspring.actions.StoreAction" method="edit">
            <result name="input">/stores/editStore.jsp</result>
            <result name="success" type="redirect">/stores/</result>
        </action>

        <action name="delete" class="dev.qwett.webappspring.actions.StoreAction" method="delete">
            <param name="idStore">{1}</param>
            <result name="success" type="redirect">/stores/</result>
        </action>

        <action name="add" class="dev.qwett.webappspring.actions.StoreAction" method="add">
            <result name="input">/stores/addStore.jsp</result>
            <result name="success" type="redirect">/stores/</result>
        </action>

        <action name="getByAddress" class="dev.qwett.webappspring.actions.StoreAction" method="getByAddress">
            <result name="success">/stores/stores.jsp</result>
        </action>

    </package>

</struts>
