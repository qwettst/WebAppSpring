<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="default" extends="struts-portlet-default" namespace="/">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="login">
            <result>/login.jsp</result>
        </action>

        <action name="stores" class="dev.qwett.webappspring.actions.StoreAction" method="execute">
            <result type="redirectAction">
                <param name="actionName">stores</param>
                <param name="portletMode">view</param>
            </result>
            <result name="success">/stores/stores.jsp</result>
        </action>
    </package>
</struts>